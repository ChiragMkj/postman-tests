{
  "info": {
    "name": "Sample API Test Collection",
    "_postman_id": "abcd1234-5678-90ab-cdef-1234567890ab",
    "description": "A sample collection with test cases",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get User Details",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has expected properties\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an(\"object\");",
              "    pm.expect(jsonData).to.have.property(\"id\");",
              "    pm.expect(jsonData).to.have.property(\"name\");",
              "    pm.expect(jsonData).to.have.property(\"email\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/users/1",
          "host": ["{{base_url}}"],
          "path": ["users", "1"]
        }
      },
      "response": []
    },
    {
      "name": "Create New User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"newUserId\", jsonData.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        }
      },
      "response": []
    }
  ]
}
